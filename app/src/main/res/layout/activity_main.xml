<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible" >

        <!-- sign-in button -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/welcome_to_our_skeleton_app_"
            android:textAppearance="@style/GuessWordText" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >
        </com.google.android.gms.common.SignInButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameplay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone"
        tools:context=".SkeletonActivity" >

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/match_instructions"
            android:textAppearance="@style/HelpText"
            android:width="300dp" />

        <TextView
            android:id="@+id/turn_counter_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/turn_counter"
            android:textAppearance="@style/GuessWordText"
            android:width="300dp" />

        <EditText
            android:id="@+id/data_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="#FFFFFFFF"
            android:gravity="center"
            android:inputType="textEmailAddress|textEmailSubject"
            android:maxLines="1"
            android:text="@string/hello_world"
            android:textAppearance="@style/GuessWordText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/doneButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:onClick="onDoneClicked"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/done"
                android:textAppearance="@style/HelpText.Heading"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCancelClicked"
                android:text="@string/cancel"
                android:textAppearance="@style/HelpText.Heading"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/leaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLeaveClicked"
                android:text="@string/leave"
                android:textAppearance="@style/HelpText.Heading"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/finishButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFinishClicked"
                android:text="@string/finish"
                android:textAppearance="@style/HelpText.Heading"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/matchup_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".SkeletonActivity" >

        <LinearLayout
            android:id="@+id/secret_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:visibility="visible"
            tools:context=".SkeletonActivity"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_small"
                android:text=""
                android:textAppearance="@style/HelpText.Caption" />

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_out" />

            <Button
                android:id="@+id/startMatchButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onStartMatchClicked"
                android:text="@string/start_match" />

            <Button
                android:id="@+id/checkGamesButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckGamesClicked"
                android:text="@string/check_games" />

            <Button
                android:id="@+id/quickMatchButon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="onQuickMatchClicked"
                android:text="@string/quick_match" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAAAAAAA"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progress_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <GridLayout
        android:id="@+id/tokyo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="#0099cc"
        android:visibility="gone"
        android:layout_gravity="left|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/PlayerHeaderName"
            android:id="@+id/PlayerHeaderID"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:longClickable="false"
            android:maxWidth="90dp"
            android:minWidth="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/healthHeader"
            android:id="@+id/HealthHeaderID"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:longClickable="false"
            android:maxWidth="90dp"
            android:minWidth="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/VictoryPointsHeader"
            android:id="@+id/VictoryPointsID"
            android:layout_row="0"
            android:layout_column="2"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:longClickable="false"
            android:maxWidth="90dp"
            android:minWidth="75dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/EnergyHeader"
            android:id="@+id/EnergyID"
            android:layout_row="0"
            android:layout_column="3"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:longClickable="false"
            android:maxWidth="90dp"
            android:minWidth="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/H1Cell"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/VP1Cell"
            android:layout_row="1"
            android:layout_column="2"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/E1Cell"
            android:layout_row="1"
            android:layout_column="3"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/P1String"
            android:id="@+id/P1Cell"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/P2String"
            android:id="@+id/P2Cell"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/H2Cell"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/VP2Cell"
            android:layout_row="2"
            android:layout_column="2"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Value0String"
            android:id="@+id/E2Cell"
            android:layout_row="2"
            android:layout_column="3"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/buttonRollString"
            android:id="@+id/resultOne"
            android:layout_row="4"
            android:layout_column="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/buttonRollString"
            android:id="@+id/resultTwo"
            android:layout_row="4"
            android:layout_column="2"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/buttonRollString"
            android:id="@+id/resultThree"
            android:layout_row="4"
            android:layout_column="3"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button1"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button2"
            android:layout_row="5"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button3"
            android:layout_row="5"
            android:layout_column="3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:onClick="rollDice"
            android:text="@string/buttonRollString"
            android:id="@+id/resultFour"
            android:layout_row="6"
            android:layout_column="1"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button6"
            android:layout_row="7"
            android:layout_column="3" />

        <Space
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button5"
            android:layout_row="7"
            android:layout_column="2"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/buttonRollString"
            android:id="@+id/resultFive"
            android:layout_row="6"
            android:layout_column="2"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="@string/buttonRollString"
            android:id="@+id/resultSix"
            android:layout_row="6"
            android:layout_column="3"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/KeepString"
            android:id="@+id/button4"
            android:layout_row="7"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="@string/buttonRollString"
            android:id="@+id/buttonRoll"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_columnSpan="3" />

    </GridLayout>
</RelativeLayout>